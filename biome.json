{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": ["assets/**", "dist/**", "node_modules/**", "test/data/**"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 320,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noInnerDeclarations": "off"
      },
      "style": {
        "noParameterAssign": "off"
      }
    }
  }
}
