{
  "name": "nvs",
  "version": "1.0.5",
  "description": "Cross-platform solution for using multiple versions of node. Useful for compatibility testing",
  "keywords": [
    "use",
    "node",
    "versions",
    "compatability",
    "npm",
    "install",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/nvs.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/cjs/index.cjs",
  "types": "dist/types/index.d.ts",
  "bin": {
    "nvs": "./bin/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "docs": "tsds docs",
    "format": "biome check --write --unsafe src/ test/",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines npm test",
    "version": "tsds version"
  },
  "dependencies": {
    "node-version-use": "^1.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "cr": "^0.1.0",
    "cross-spawn-cb": "^2.0.4",
    "is-version": "^0.2.1",
    "rimraf2": "^2.8.2"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.mjs",
    "targets": [
      "cjs"
    ]
  }
}
