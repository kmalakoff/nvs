{
  "name": "nvs",
  "version": "0.5.2",
  "description": "Cross-platform solution for using multiple versions of node. Useful for compatibility testing",
  "keywords": [
    "use",
    "node",
    "versions",
    "compatability",
    "npm",
    "install",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/nvs.git"
  },
  "license": "MIT",
  "bin": {
    "nvs": "./bin/cli.js"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "format": "biome check --apply-unsafe src/ test/",
    "test": "tsds test:node --timeout=40000",
    "test:engines": "nvu engines tsds test:node --timeout=40000",
    "version": "tsds version"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "cr": "^0.1.0",
    "cross-spawn-cb": "^0.6.17",
    "depcheck": "^1.4.7",
    "is-version": "^0.2.1",
    "node-version-use": "^0.4.7",
    "rimraf": "^2.7.1",
    "ts-dev-stack": "^0.9.7"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.js",
    "targets": [
      "cjs"
    ]
  }
}
